<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ncst.hospitaloutpatient.mapper.reference.DictionaryMapper">

    <select id="selectSettlementCategories" resultType="com.ncst.hospitaloutpatient.model.dto.reference.SettlementCategoryResponse">
        SELECT
            settlement_type_id AS settlementTypeId,
            name,
            description
        FROM settlement_type
        ORDER BY settlement_type_id
    </select>

    <select id="selectNumberTypes" resultType="com.ncst.hospitaloutpatient.model.dto.reference.NumberTypeResponse">
        SELECT
            number_type AS numberType,
            display_name,
            fee
        FROM number_type_config
        ORDER BY number_type
    </select>

    <select id="selectPaymentMethods" resultType="com.ncst.hospitaloutpatient.model.dto.reference.PaymentMethodResponse">
        SELECT
            payment_method_id AS paymentMethodId,
            name,
            description
        FROM payment_method
        ORDER BY payment_method_id
    </select>

    <select id="selectAllDrugCategories" resultType="com.ncst.hospitaloutpatient.model.dto.reference.DrugCategoryResponse">
        SELECT
            category_id AS categoryId,
            category_name AS categoryName,
            description
        FROM drug_category
        ORDER BY category_id
    </select>

</mapper>